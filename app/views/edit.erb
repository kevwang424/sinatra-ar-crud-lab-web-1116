

<form action="/posts/<%=@post.id%>" method="post">

  <h1>Post <%=@post.id%></h1>
  <h4>Existing title: <%=@post.name%></h4>
  <h4>Existing content: <%=@post.content%></h4>

  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Please edit the title and comment</h2>
  <label>Title: </label><input type="text" name="name">
  <label>Content: </label><input type="text" name="content">
  <input type="submit" value="submit">
</form>
